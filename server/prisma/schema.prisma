generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  firstName String
  isAdmin   Boolean @default(false)
  email     String
  lastName  String
  password  String
  role      Role    @default(Employee)
  job       Job[]
}

model Job {
  id          Int       @id @default(autoincrement())
  title       String
  category    String
  companyName String
  location    String
  jobType     String
  description String
  salaryRange String?
  postedAt    String?
  deadline    DateTime?
  isActive    Boolean   @default(true)
  employerId  Int
  companyLogo String
  companyUrl  String?
  experience  String
  jobUrl      String?   @unique
  rating      Float?
  via         String?
  tags        String[]
  employer    User      @relation(fields: [employerId], references: [id])
}

enum Role {
  Employee
  Company
}
